@model R_10026.EvalSheet

<!-- PAGE TITLE ELEMENT -->
<div class="container page-title">
    <h1>@Global.BreadcrumbsEvalSheet</h1>
</div>

<div class="container">
    <form>
        <div class="form-toggle">
            <img src="@Links.Content.img.icons.eco_tree_png" data-placement="right" data-toggle="popover" data-content="@Global.EcoNotification" data-trigger="hover" class="info-icon" style="padding-top:5px;height: 33px; margin-right:5px; margin-left:-5px;" />
        </div>
        <ul class="nav nav-tabs">
            @Html.ActionLink(Global.BreadcrumbsEvalSheet, MVC.Private.EvalSheet.ActionNames.Prepare, MVC.Private.EvalSheet.Name, new { area = MVC.Private.Name }, new { @class = "tab wait" })
            @Html.ActionLink(Global.ButtonPreviewText, MVC.Private.EvalSheet.ActionNames.Display, MVC.Private.EvalSheet.Name, new { area = MVC.Private.Name }, new { @class = "tab active wait" })

            @Html.ActionLink(Global.Print, MVC.Private.EvalSheet.ActionNames.Print, MVC.Private.EvalSheet.Name, null, new { @class = "top-print-btn", target = "_blank" })
        </ul>
    </form>
    <div class="tab-content">

        <div class="form-with-sections">

            @Html.ValidationSummaryForErrorsWithBackButton(Model.LocalValidationErrors, null, Global.ValidationSummaryTitle,
                Url.Action(MVC.Private.EvalSheet.ActionNames.Prepare, MVC.Private.EvalSheet.Name), Global.ValidationSummaryLinkTitle)
            @Html.ValidationSummaryForWarningsWithBackButton(null, Global.ValidationSummaryWarningsTitle,
                Url.Action(MVC.Private.EvalSheet.ActionNames.Prepare, MVC.Private.EvalSheet.Name), Global.ValidationSummaryWarningLinkTitle)

            @Html.DisplayFor(m => m)

            <div class="form-submit">
                @Html.ActionLink(Global.BackButton, MVC.Private.EvalSheet.ActionNames.Prepare, MVC.Private.EvalSheet.Name, null, new { @class = "blue-button small back left" })
                @Html.ActionLink(Global.ButtonPauseTextUpper, MVC.Private.EvalSheet.ActionNames.Pause, MVC.Private.EvalSheet.Name, null, new { @class = "blue-button wait", style = "background-color:#d9534f;" })
                @Html.ActionLink(Global.ButtonCompleteTextUpper, MVC.Private.EvalSheet.ActionNames.Submit, MVC.Private.EvalSheet.Name, null, new { @class = "blue-button wait" })
            </div>
        </div>
    </div>
</div>
