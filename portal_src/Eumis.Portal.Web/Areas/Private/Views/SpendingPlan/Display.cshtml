@model R_10077.SpendingPlan

<!-- PAGE TITLE ELEMENT -->
<div class="container page-title">
    <h1>@Global.SpendingPlan</h1>
</div>

<div class="container">
    <form>
        @Html.Partial(MVC.Shared.Views._ExpandCollapseWithEcoPartial)
        <ul class="nav nav-tabs">
            @Html.ActionLink(Global.SpendingPlan, MVC.Private.SpendingPlan.ActionNames.Prepare, MVC.Private.SpendingPlan.Name, new { area = MVC.Private.Name }, new { @class = "tab wait" })
            @Html.ActionLink(Global.ButtonPreviewText, MVC.Private.SpendingPlan.ActionNames.Display, MVC.Private.SpendingPlan.Name, new { area = MVC.Private.Name }, new { @class = "tab active wait" })

            @Html.ActionLink(Global.Print, MVC.Private.SpendingPlan.ActionNames.Print, MVC.Private.SpendingPlan.Name, null, new { @class = "top-print-btn", target = "_blank" })
        </ul>
    </form>
    <div class="tab-content">

        <div class="form-with-sections">

            @Html.ValidationSummaryForErrorsWithBackButton(Model.LocalValidationErrors, null, Global.ValidationSummaryTitle,
                Url.Action(MVC.Private.SpendingPlan.ActionNames.Prepare, MVC.Private.SpendingPlan.Name), Global.ValidationSummaryLinkTitle)
            @Html.ValidationSummaryForWarningsWithBackButton(null, Global.ValidationSummaryWarningsTitle,
                Url.Action(MVC.Private.SpendingPlan.ActionNames.Prepare, MVC.Private.SpendingPlan.Name), Global.ValidationSummaryWarningLinkTitle)

            @Html.DisplayFor(m => m)

            <div class="form-submit">
                @Html.ActionLink(Global.BackButton, MVC.Private.SpendingPlan.ActionNames.Prepare, MVC.Private.SpendingPlan.Name, null, new { @class = "blue-button small back left" })
                @Html.ActionLink(Global.ButtonCompleteTextUpper, MVC.Private.SpendingPlan.ActionNames.Submit, MVC.Private.SpendingPlan.Name, null, new { @class = "blue-button wait" })
            </div>
        </div>
    </div>
</div>
