@model R_10042.Communication

@{
    string breadcrumbString = R_10042.Communication.GetDocumentHeaderText(Model.type);
}

<!-- PAGE TITLE ELEMENT -->
<div class="container page-title">
    <h1>@breadcrumbString</h1>
</div>

<div class="container">
    <form>
        <div class="form-toggle">
            <img src="@Links.Content.img.icons.eco_tree_png" data-placement="right" data-toggle="popover" data-content="@Global.EcoNotification" data-trigger="hover" class="info-icon" style="padding-top:5px;height: 33px; margin-right:5px; margin-left:-5px;" />
        </div>
        <ul class="nav nav-tabs">
            @Html.ActionLink(breadcrumbString, MVC.Private.Communication.ActionNames.Prepare, MVC.Private.Communication.Name, new { area = MVC.Private.Name }, new { @class = "tab wait" })
            @Html.ActionLink(Global.ButtonPreviewText, MVC.Private.Communication.ActionNames.Display, MVC.Private.Communication.Name, new { area = MVC.Private.Name }, new { @class = "tab active wait" })

            @Html.ActionLink(Global.Print, MVC.Private.Communication.ActionNames.Print, MVC.Private.Communication.Name, null, new { @class = "top-print-btn", target = "_blank" })
        </ul>
    </form>
    <div class="tab-content">

        <div class="form-with-sections">

            @Html.ValidationSummaryForErrorsWithBackButton(Model.LocalValidationErrors, null, Global.ValidationSummaryTitle,
                Url.Action(MVC.Private.Communication.ActionNames.Prepare, MVC.Private.Communication.Name), Global.ValidationSummaryLinkTitle)
            @Html.ValidationSummaryForWarningsWithBackButton(null, Global.ValidationSummaryWarningsTitle,
                Url.Action(MVC.Private.Communication.ActionNames.Prepare, MVC.Private.Communication.Name), Global.ValidationSummaryWarningLinkTitle)

            @Html.DisplayFor(m => m)

            <div class="form-submit">
                @Html.ActionLink(Global.BackButton, MVC.Private.Communication.ActionNames.Prepare, MVC.Private.Communication.Name, null, new { @class = "blue-button small back left" })
                @Html.ActionLink(Global.ButtonCompleteTextUpper, MVC.Private.Communication.ActionNames.Submit, MVC.Private.Communication.Name, null, new { @class = "blue-button wait" })
            </div>
        </div>
    </div>
</div>
