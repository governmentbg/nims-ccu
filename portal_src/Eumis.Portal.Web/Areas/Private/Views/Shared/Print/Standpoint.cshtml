@model R_10027.Standpoint

@if (Model != null)
{
    <section style="display:block;">
        <div class="comment-section">
            <strong>@Standpoint.Subject</strong>
            @Html.Partial(MVC.Shared.Views.Print.TextAreaPre, Model.Subject ?? string.Empty)
        </div>
        <div class="comment-section">
            <strong>@Standpoint.Content</strong>
            @Html.Partial(MVC.Shared.Views.Print.TextAreaPre, Model.Content ?? string.Empty)
        </div>
    </section>

    <h3>@Standpoint.AttachedDocumentCollection</h3>
    if (Model.AttachedDocumentCollection != null && Model.AttachedDocumentCollection.Count > 0)
    {
        <section style="display:block;">
            @Html.Partial(MVC.Private.Shared.Views.Print.UndefinedAttachedDocumentCollection, Model.AttachedDocumentCollection ?? new R_10027.AttachedDocumentCollection())
        </section>
    }
}