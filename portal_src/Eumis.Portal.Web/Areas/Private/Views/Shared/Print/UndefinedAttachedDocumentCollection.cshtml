@model List<R_10018.AttachedDocument>

@if (Model != null)
{
    <div>
        <table>
            <thead>
                <tr>
                    <th>@AttachedDocument.Description</th>
                    <th style="width:40%;">@AttachedDocument.FileName</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model[i].Description
                            </td>
                            <td>
                                @if (Model[i].AttachedDocumentContent != null && !String.IsNullOrWhiteSpace(Model[i].AttachedDocumentContent.FileName) && !String.IsNullOrWhiteSpace(Model[i].AttachedDocumentContent.BlobContentId))
                                {
                                    @Model[i].AttachedDocumentContent.FileName
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}
