@model Eumis.Portal.Web.Areas.Report.Models.MicroData.MicroStaticPagedList<Eumis.Documents.Contracts.ContractReportMicroType3ItemPVO>

@using PagedList.Mvc;

<!-- PAGE TITLE ELEMENT -->
<div class="container page-title">
    <h1>Договор № @Model.ContractNumber, Микроданни хранителни продукти № @Model.DocNumber</h1>
</div>

<div class="container">
    <div class="tab-content" style="border-top:1px solid #d8d8d8;">
        <form class="form-with-sections">

            @Html.DisplayFor(m => m, MVC.Shared.Views.DisplayTemplates.ContractReportMicroType3Collection)

            @Html.PagedListPager(Model,
                page => Url.Action((String)ViewContext.RouteData.Values["action"],
                (String)ViewContext.RouteData.Values["controller"],
                new
                {
                    page = page,
                    gid = Request.QueryString["gid"],
                    access_token = Request.QueryString["access_token"]
                }),
                Constants.PagedListRenderOptions)

        </form>
    </div>
</div>
