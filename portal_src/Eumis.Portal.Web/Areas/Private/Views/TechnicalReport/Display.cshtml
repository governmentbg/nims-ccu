@model R_10044.TechnicalReport

<!-- PAGE TITLE ELEMENT -->
<div class="container page-title">
    <h1>Договор № @Model.contractNumber, @Global.TechnicalReport № @Model.docNumber</h1>
</div>

<div class="container">
    <form>
        @Html.Partial(MVC.Shared.Views._ExpandCollapseWithEcoPartial)
        <ul class="nav nav-tabs">
            @Html.ActionLink(Global.TechnicalReport, MVC.Private.TechnicalReport.ActionNames.Prepare, MVC.Private.TechnicalReport.Name, new { area = MVC.Private.Name }, new { @class = "tab wait" })
            @Html.ActionLink(Global.ButtonPreviewText, MVC.Private.TechnicalReport.ActionNames.Display, MVC.Private.TechnicalReport.Name, new { area = MVC.Private.Name }, new { @class = "tab active wait" })

            @Html.ActionLink(Global.Print, MVC.Private.TechnicalReport.ActionNames.Print, MVC.Private.TechnicalReport.Name, null, new { @class = "top-print-btn", target = "_blank" })
        </ul>
    </form>
    <div class="tab-content">

        <div class="form-with-sections">

            @Html.ValidationSummaryForErrorsWithBackButton(Model.LocalValidationErrors, null, Global.ValidationSummaryTitle,
                Url.Action(MVC.Private.TechnicalReport.ActionNames.Prepare, MVC.Private.TechnicalReport.Name), Global.ValidationSummaryLinkTitle)
            @Html.ValidationSummaryForWarningsWithBackButton(null, Global.ValidationSummaryWarningsTitle,
                Url.Action(MVC.Private.TechnicalReport.ActionNames.Prepare, MVC.Private.TechnicalReport.Name), Global.ValidationSummaryWarningLinkTitle)

            @Html.DisplayFor(m => m)

            <div class="form-submit">
                @Html.ActionLink(Global.BackButton, MVC.Private.TechnicalReport.ActionNames.Prepare, MVC.Private.TechnicalReport.Name, null, new { @class = "blue-button small back left" })
                @if (Model.CanEnterErrors == null || Model.CanEnterErrors.Count == 0)
                {
                    @Html.ActionLink(Global.ButtonCompleteTextUpper, MVC.Private.TechnicalReport.ActionNames.Submit, MVC.Private.TechnicalReport.Name, null, new { @class = "blue-button wait" })
                }
            </div>

            @if (Model.CanEnterErrors != null && Model.CanEnterErrors.Count > 0)
            {
                <div class="validation-summary-errors" style="margin-top:20px;">
                    <ul>
                        @foreach (var error in Model.CanEnterErrors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
