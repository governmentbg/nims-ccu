@model R_10027.Standpoint

<!-- PAGE TITLE ELEMENT -->
<div class="container page-title">
    <h1>@Global.BreadcrumbsStandpoint</h1>
</div>

<div class="container">
    <div class="form-toggle">
        <img src="@Links.Content.img.icons.eco_tree_png" data-placement="right" data-toggle="popover" data-content="@Global.EcoNotification" data-trigger="hover" class="info-icon" style="padding-top:5px;height: 33px; margin-right:5px; margin-left:-5px;" />
    </div>
    <ul class="nav nav-tabs">
        @Html.ActionLink(Global.BreadcrumbsStandpoint, MVC.Private.Standpoint.ActionNames.Prepare, MVC.Private.Standpoint.Name, new { area = MVC.Private.Name }, new { @class = "tab wait" })
        @Html.ActionLink(Global.ButtonPreviewText, MVC.Private.Standpoint.ActionNames.Display, MVC.Private.Standpoint.Name, new { area = MVC.Private.Name }, new { @class = "tab active wait" })

        @Html.ActionLink(Global.Print, MVC.Private.Standpoint.ActionNames.Print, MVC.Private.Standpoint.Name, null, new { @class = "top-print-btn", target = "_blank" })
    </ul>
    <div class="tab-content">

        <div class="form-with-sections">

            @Html.ValidationSummaryForErrorsWithBackButton(Model.LocalValidationErrors, null, Global.ValidationSummaryTitle,
                             Url.Action(MVC.Private.Standpoint.ActionNames.Prepare, MVC.Private.Standpoint.Name), Global.ValidationSummaryLinkTitle)
            @Html.ValidationSummaryForWarningsWithBackButton(null, Global.ValidationSummaryWarningsTitle,
                             Url.Action(MVC.Private.Standpoint.ActionNames.Prepare, MVC.Private.Standpoint.Name), Global.ValidationSummaryWarningLinkTitle)

            @Html.DisplayFor(m => m)

            <div class="form-submit">
                @Html.ActionLink(Global.BackButton, MVC.Private.Standpoint.ActionNames.Prepare, MVC.Private.Standpoint.Name, null, new { @class = "blue-button small back left" })
                @Html.ActionLink(Global.ButtonCompleteTextUpper, MVC.Private.Standpoint.ActionNames.Submit, MVC.Private.Standpoint.Name, null, new { @class = "blue-button wait" })
            </div>
        </div>
    </div>
</div>
