@model Eumis.Portal.Web.Models.Draft.LabelVM
@using Eumis.Portal.Web.Models.Draft

<table width="100%" cellpadding="10" cellspacing="0" style="border: 1px solid #000000;">
    <tr>
        <td>
            <table width="100%" cellpadding="0" cellspacing="0" style="font-size: 12px; font-family:Verdana;">
                <tr>
                    <td colspan="2">
                        <table style="border: 1px solid #fff;" width="98%" cellpadding="5" cellspacing="0">
                            <tr>
                                <td width="90%" align="center">
                                    <strong>Подател:</strong>
                                </td>
                                <td width="10%" align="center" style="border: 1px solid #fff;"></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <table style="border: 1px solid #000000;" width="98%" cellpadding="5" cellspacing="0">
                            <tr>
                                <td width="90%" align="center">
                                    <strong>@Model.CandidateName</strong><br />
                                    @Model.UinType: @Model.CandidateEIK<br />
                                    @Model.Address<br />

                                    @if (!string.IsNullOrWhiteSpace(Model.CompanyRepresentativePerson))
                                    {
                                        @Model.CompanyRepresentativePerson.Trim(',')<text>,</text>
                                    }
                                    
                                    @if (!string.IsNullOrWhiteSpace(Model.Phone1))
                                    {
                                       <text>тел.:</text> @Model.Phone1.Trim(',')<text>,</text>
                                    }
                                    <a style="color: #000000;" href="mailto:@(Model.Email)" title="@Model.Email">@Model.Email</a>
                                </td>
                                <td width="10%" align="center" style="border-left: 1px solid #000000;"><img style="width: 50px; height: 50px;" src="@(Raw(string.Format(Eumis.Common.Helpers.Mix.GetHostUrl() + "/submit/qr?hash={0}&width={1}&height={2}", Model.ProjectCode, 150, 150)))" /></td>                     
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr><td colspan="2"><br /></td></tr>
                <tr>
                    <td width="50%" align="center">
                        <img style="height: 80px;" src="@Links.Content.img.eu_big_jpg" alt="" />
                    </td>
                    <td width="50%" align="center">
                        <img style="height: 80px;" src="@Links.Content.img.logo_big_jpg" alt="" />
                    </td>
                </tr>
                <tr><td colspan="2"><br /></td></tr>
                <tr>
                    <td colspan="2" align="center" style="font-size: 30px;">ПРОЕКТНО ПРЕДЛОЖЕНИЕ</td>
                </tr>
                <tr><td colspan="2" style="font-size: 10px;">&nbsp;</td></tr>
                <tr>
                    <td colspan="2" align="center" style="font-size: 18px;"><strong>@Model.ProjectCode</strong></td>
                </tr>
                <tr><td colspan="2" style="font-size: 30px;">&nbsp;</td></tr>
                <tr>
                    <td colspan="2" align="center" style="font-size: 16px;"><strong>@Model.ProjectName</strong></td>
                </tr>
                <tr><td colspan="2" style="font-size: 30px;">&nbsp;</td></tr>
                <tr>
                    <td colspan="2" align="center" style="font-size: 12px; margin-right: 10px;">
                        @foreach (var operativeProgramme in Model.OperativeProgrammes)
                        {
                            <strong>@operativeProgramme.Name</strong><br />
                            @(string.Join(",\n", operativeProgramme.PriorityAxesNames)) <br /><br />
                        }

                        <strong>
                            @Model.ProcedureName<br />
                            @Model.ProcedureCode
                        </strong>
                    </td>
                </tr>
                <tr><td colspan="2" style="font-size: 30px;">&nbsp;</td></tr>
                <tr>
                    <td colspan="2" align="center"><strong>Получател:</strong></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <table style="border: 1px solid #000000;" width="98%" cellpadding="5" cellspacing="0">
                            <tr>
                                <td align="center">
                                    <strong>Управляващ орган на оперативна програма @Model.OperativeProgrammes[0].Name</strong><br />
                                    @Model.Ministry.Name<br />
                                    @Model.Ministry.Direction<br />
                                    @Model.Ministry.Address
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>

            </table>
        </td>
    </tr>
</table>
