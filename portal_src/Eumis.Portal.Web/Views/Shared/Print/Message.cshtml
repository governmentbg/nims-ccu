@model R_10020.Message

@if (Model != null)
{
    <h3>
        @Message.Question
    </h3>
    <section>
        <div class="paragraph-margin0">
            <p>@Html.Partial(MVC.Shared.Views.Print.TextAreaPre, Model.Content ?? string.Empty)</p>
        </div>
    </section>

    if (Model.ContentAttachedDocumentCollection != null && Model.ContentAttachedDocumentCollection.Count > 0)
    {
        <h3>
            @Message.ContentAttachedDocumentCollection
        </h3>
        <section>
            @Html.Partial(MVC.Shared.Views.Print.UndefinedAttachedDocumentCollection, Model.ContentAttachedDocumentCollection)
        </section>
    }

    if (Model.type == R_09990.MessageTypeNomenclature.Answer)
    {
        <h3>
            @Message.Reply
        </h3>
        <section>
            <div class="paragraph-margin0">
                <p>@Html.Partial(MVC.Shared.Views.Print.TextAreaPre, Model.Reply ?? string.Empty)</p>
            </div>
        </section>

        if (Model.ReplyAttachedDocumentCollection != null && Model.ReplyAttachedDocumentCollection.Count > 0)
        {
            <h3>
                @Message.ReplyAttachedDocumentCollection
            </h3>
            <section>
                @Html.Partial(MVC.Shared.Views.Print.UndefinedAttachedDocumentCollection, Model.ReplyAttachedDocumentCollection)
            </section>
        }
    }

    @Html.Partial(MVC.Shared.Views.Print.Project, Model.Project)
}
