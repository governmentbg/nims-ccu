@model R_10045.PaymentRequestAttachedDocuments

@if (Model != null)
{
    <div>
        <table>
            <thead>
                <tr>
                    <th>@AttachedDocument.Description</th>
                    <th>@AttachedDocument.FileName</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.AttachedDocumentCollection != null && Model.AttachedDocumentCollection.Count > 0)
                {
                    for (int i = 0; i < Model.AttachedDocumentCollection.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.AttachedDocumentCollection[i].Description
                            </td>
                            <td>
                                @if (Model.AttachedDocumentCollection[i].AttachedDocumentContent != null)
                                {
                                    <text>@Model.AttachedDocumentCollection[i].AttachedDocumentContent.FileName</text>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}