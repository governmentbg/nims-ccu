@model List<R_10018.AttachedDocument>

<div>
    <table>
        <thead>
            <tr>
                <th>@AttachedDocument.Description</th>
                <th>@AttachedDocument.FileName</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Model[i].Description
                        </td>
                        <td>
                            @if (Model[i].AttachedDocumentContent != null)
                            {
                                <text>@Model[i].AttachedDocumentContent.FileName</text>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
