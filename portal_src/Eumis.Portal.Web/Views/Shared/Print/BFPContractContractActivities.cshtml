@model R_10040.BFPContractContractActivities

<div>
    @if (Model != null && Model.BFPContractContractActivityCollection != null && Model.BFPContractContractActivityCollection.Count > 0)
    {
        for (int i = 0; i < Model.BFPContractContractActivityCollection.Count; i++)
        {
            <table class="contract-activity">
                <tbody>
                    <tr>
                        <td style="width: 35%;">@BFPContractContractActivity.Company</td>
                        <td style="width: 65%;">
                            @if (Model.BFPContractContractActivityCollection[i].CompanyCollection != null)
                            {
                                for (int j = 0; j < Model.BFPContractContractActivityCollection[i].CompanyCollection.Count; j++)
                                {
                                    <p>@Html.Partial(MVC.Shared.Views.Print.PrivateNomenclature, Model.BFPContractContractActivityCollection[i].CompanyCollection[j] ?? new R_10000.PrivateNomenclature())</p>
                                }
                            }
                        </td>
                    </tr>
                    <tr>
                        <td style="word-break: break-all">@BFPContractContractActivity.Code</td>
                        <td>@Html.Partial(MVC.Shared.Views.Print.TextAreaPre, Model.BFPContractContractActivityCollection[i].Code ?? string.Empty)</td>
                    </tr>
                    <tr>
                        <td>@BFPContractContractActivity.Name</td>
                        <td>@Html.Partial(MVC.Shared.Views.Print.TextAreaPre, Model.BFPContractContractActivityCollection[i].Name ?? string.Empty)</td>
                    </tr>
                    <tr>
                        <td>@BFPContractContractActivity.ExecutionMethod</td>
                        <td>@Html.Partial(MVC.Shared.Views.Print.TextAreaPre, Model.BFPContractContractActivityCollection[i].ExecutionMethod ?? string.Empty)</td>
                    </tr>
                    <tr>
                        <td>@BFPContractContractActivity.Result</td>
                        <td>@Html.Partial(MVC.Shared.Views.Print.TextAreaPre, Model.BFPContractContractActivityCollection[i].Result ?? string.Empty)</td>
                    </tr>
                    <tr>
                        <td>@BFPContractContractActivity.StartMonth</td>
                        <td>@Model.BFPContractContractActivityCollection[i].StartMonth</td>
                    </tr>
                    <tr>
                        <td>@BFPContractContractActivity.Duration</td>
                        <td>@Model.BFPContractContractActivityCollection[i].Duration</td>
                    </tr>
                    <tr>
                        <td>@BFPContractContractActivity.Amount</td>
                        <td>@Html.Partial(MVC.Shared.Views.Print.Decimal, Model.BFPContractContractActivityCollection[i].Amount)</td>
                    </tr>
                    @if (!Model.BFPContractContractActivityCollection[i].isActive)
                    {
                        <tr>
                            <td>@BFPContractContractActivity.Status</td>
                            <td>@BFPContractContractActivity.Canceled</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }

    @Html.Partial(MVC.Shared.Views.Print.BFPContractContractActivitiesDiagram, Model.BFPContractContractActivityCollection ?? new R_10040.BFPContractContractActivityCollection())
</div>