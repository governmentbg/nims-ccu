@model R_10014.ProgrammeIndicators

<div class="table-wrapper">
    <img class="horizontal-scroll" src="@Url.Content(Links.Content.img.icons.blue_arrow_right_gif)" alt="" />
    <table class="chart-info" width="100%">
        <thead>
            <tr>
                <th>@ProgrammeIndicators.Name</th>
                <th>@ProgrammeIndicators.Type</th>
                <th>@ProgrammeIndicators.Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.IndicatorCollection != null && Model.IndicatorCollection.Count > 0)
            {
                for (int i = 0; i < Model.IndicatorCollection.Count; i++)
                {
                    <tr class="@(Model.IndicatorCollection[i].IsDeactivated ? "deactivated" : "")">
                        <td style="word-break: break-all">
                            <span class="filled-value">
                                @Model.IndicatorCollection[i].displayName
                                @if (Model.IndicatorCollection[i].IsDeactivated)
                                {
                                    <img class="info-icon" src="@Url.Content(Links.Content.img.icons.info_white_png)" data-placement="right" data-toggle="popover" data-content="@Global.Deactivated" data-trigger="hover" alt="" data-original-title="" title="">
                                }
                            </span>
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.IndicatorCollection[i].displayTypeName)
                        </td>
                        <td style="width: 130px;">
                            <a title="" class="history-btn">
                                <img class="arrow" src="@Url.Content(Links.Content.img.icons.blue_arrow_right_small_gif)" alt="">@Global.ButtonPreviewText
                            </a>
                        </td>
                    </tr>

                    <tr class="history-table @(Model.IndicatorCollection[i].IsDeactivated ? "deactivated" : "")">
                        <td colspan="3">
                            <div class="history-table-wrapper clearfix">
                                <div class="clearfix">
                                    <div class="form-group col-lg-12 col-md-12">
                                        @Html.LabelFor(m => m.IndicatorCollection[i].displayName, ProgrammeIndicators.Name)
                                        @Html.DisplayFor(m => m.IndicatorCollection[i].displayName)
                                    </div>
                                </div>

                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.IndicatorCollection[i].displayTypeName, ProgrammeIndicators.Type)
                                    @Html.DisplayFor(m => m.IndicatorCollection[i].displayTypeName)
                                </div>

                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.IndicatorCollection[i].displayTrendName, ProgrammeIndicators.Trend)
                                    @Html.DisplayFor(m => m.IndicatorCollection[i].displayTrendName)
                                </div>

                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.IndicatorCollection[i].displayKindName, ProgrammeIndicators.Kind)
                                    @Html.DisplayFor(m => m.IndicatorCollection[i].displayKindName)
                                </div>

                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.IndicatorCollection[i].displayMeasureName, ProgrammeIndicators.Measure)
                                    @Html.DisplayFor(m => m.IndicatorCollection[i].displayMeasureName)
                                </div>

                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.IndicatorCollection[i].displayAggregatedReport, ProgrammeIndicators.AggregatedReport)
                                    @Html.DisplayFor(m => m.IndicatorCollection[i].displayAggregatedReport)
                                </div>

                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.IndicatorCollection[i].displayAggregatedTarget, ProgrammeIndicators.AggregatedTarget)
                                    @Html.DisplayFor(m => m.IndicatorCollection[i].displayAggregatedTarget)
                                </div>

                                @if (Model.IndicatorCollection[i].HasGenderDivision)
                                {
                                    <div class="form-group col-lg-4 col-md-6">
                                        @Html.LabelFor(m => m.IndicatorCollection[i].BaseMen, ProgrammeIndicators.BaseMen)
                                        @Html.DisplayFor(m => m.IndicatorCollection[i].BaseMen, MVC.Shared.Views.DisplayTemplates.DecimalWithSpan)
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        @Html.LabelFor(m => m.IndicatorCollection[i].BaseWomen, ProgrammeIndicators.BaseWomen)
                                        @Html.DisplayFor(m => m.IndicatorCollection[i].BaseWomen, MVC.Shared.Views.DisplayTemplates.DecimalWithSpan)
                                    </div>
                                }

                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.IndicatorCollection[i].BaseTotal, ProgrammeIndicators.BaseTotal)
                                    @Html.DisplayFor(m => m.IndicatorCollection[i].BaseTotal, MVC.Shared.Views.DisplayTemplates.DecimalWithSpan)
                                </div>

                                @if (Model.IndicatorCollection[i].HasGenderDivision)
                                {
                                    <div class="form-group col-lg-4 col-md-6">
                                        @Html.LabelFor(m => m.IndicatorCollection[i].TargetMen, ProgrammeIndicators.TargetMen)
                                        @Html.DisplayFor(m => m.IndicatorCollection[i].TargetMen, MVC.Shared.Views.DisplayTemplates.DecimalWithSpan)
                                    </div>
                                    <div class="form-group col-lg-4 col-md-6">
                                        @Html.LabelFor(m => m.IndicatorCollection[i].TargetWomen, ProgrammeIndicators.TargetWomen)
                                        @Html.DisplayFor(m => m.IndicatorCollection[i].TargetWomen, MVC.Shared.Views.DisplayTemplates.DecimalWithSpan)
                                    </div>
                                }

                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.IndicatorCollection[i].TargetTotal, ProgrammeIndicators.TargetTotal)
                                    @Html.DisplayFor(m => m.IndicatorCollection[i].TargetTotal, MVC.Shared.Views.DisplayTemplates.DecimalWithSpan)
                                </div>

                                <div class="form-group col-lg-12 col-md-12">
                                    @Html.LabelFor(m => m.IndicatorCollection[i].Description, ProgrammeIndicators.Description)
                                    @Html.DisplayFor(m => m.IndicatorCollection[i].Description, MVC.Shared.Views.DisplayTemplates.TextAreaPre)
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>