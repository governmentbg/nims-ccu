@model R_10040.BFPContractContractActivities

<div class="table-wrapper">
    <table class="chart-info" width="100%">
        <thead>
            <tr>
                <th style="width:40px;"></th>
                <th>@BFPContractContractActivity.Code</th>
                <th>@BFPContractContractActivity.CompanyShort</th>
                <th>@BFPContractContractActivity.Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.BFPContractContractActivityCollection != null && Model.BFPContractContractActivityCollection.Count > 0)
            {
                for (int i = 0; i < Model.BFPContractContractActivityCollection.Count; i++)
                {
                    <tr class="@(!Model.BFPContractContractActivityCollection[i].isActive ? "deactivated-gray" : "")">
                        <td>@(i+1)</td>
                        <td style="word-break: break-all">
                            <span class="filled-value">
                                @Model.BFPContractContractActivityCollection[i].Code

                                @if (!Model.BFPContractContractActivityCollection[i].isActive)
                                {
                                    <img class="info-icon" src="@Url.Content(Links.Content.img.icons.info_white_png)" data-placement="right" data-toggle="popover" data-content="@Global.ElementCanceled" data-trigger="hover" alt="" data-original-title="" title="">
                                }
                            </span>
                        </td>
                        <td>
                            @if (Model.BFPContractContractActivityCollection[i].CompanyCollection != null && Model.BFPContractContractActivityCollection[i].CompanyCollection.Count > 0)
                            {
                                foreach (var company in Model.BFPContractContractActivityCollection[i].CompanyCollection)
                                {
                            @Html.DisplayFor(m => company)
                                }
                            }
                        </td>
                        <td style="width: 130px;">
                            <a title="" class="history-btn">
                                <img class="arrow" src="@Url.Content(Links.Content.img.icons.blue_arrow_right_small_gif)" alt="">@Global.ButtonPreviewText
                            </a>
                        </td>
                    </tr>

                    <tr class="history-table @(!Model.BFPContractContractActivityCollection[i].isActive ? "deactivated-gray" : "")">
                        <td colspan="5">
                            <div class="history-table-wrapper clearfix">
                                <div class="form-group col-lg-6 col-md-12">
                                    <label>@BFPContractContractActivity.Company</label>
                                    @if (Model.BFPContractContractActivityCollection[i].CompanyCollection != null && Model.BFPContractContractActivityCollection[i].CompanyCollection.Count > 0)
                                    {
                                        foreach (var company in Model.BFPContractContractActivityCollection[i].CompanyCollection)
                                        {
                                            @Html.DisplayFor(m => company)
                                        }
                                    }
                                </div>

                                <div class="form-group col-lg-12 col-md-12">
                                    @Html.LabelFor(m => m.BFPContractContractActivityCollection[i].Code, BFPContractContractActivity.Code)
                                    @Html.DisplayFor(m => m.BFPContractContractActivityCollection[i].Code, MVC.Shared.Views.DisplayTemplates.TextAreaPre)
                                </div>

                                <div class="form-group col-lg-12 col-md-12">
                                    @Html.LabelFor(m => m.BFPContractContractActivityCollection[i].Name, BFPContractContractActivity.Name)
                                    @Html.DisplayFor(m => m.BFPContractContractActivityCollection[i].Name, MVC.Shared.Views.DisplayTemplates.TextAreaPre)
                                </div>

                                <div class="form-group col-lg-12 col-md-12">
                                    @Html.LabelFor(m => m.BFPContractContractActivityCollection[i].ExecutionMethod, BFPContractContractActivity.ExecutionMethod)
                                    @Html.DisplayFor(m => m.BFPContractContractActivityCollection[i].ExecutionMethod, MVC.Shared.Views.DisplayTemplates.TextAreaPre)
                                </div>

                                <div class="form-group col-lg-12 col-md-12">
                                    @Html.LabelFor(m => m.BFPContractContractActivityCollection[i].Result, BFPContractContractActivity.Result)
                                    @Html.DisplayFor(m => m.BFPContractContractActivityCollection[i].Result, MVC.Shared.Views.DisplayTemplates.TextAreaPre)
                                </div>


                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.BFPContractContractActivityCollection[i].StartMonth, BFPContractContractActivity.StartMonth)
                                    @Html.DisplayFor(m => m.BFPContractContractActivityCollection[i].StartMonth)
                                </div>
                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.BFPContractContractActivityCollection[i].Duration, BFPContractContractActivity.Duration)
                                    @Html.DisplayFor(m => m.BFPContractContractActivityCollection[i].Duration)
                                </div>
                                <div class="form-group col-lg-4 col-md-6">
                                    @Html.LabelFor(m => m.BFPContractContractActivityCollection[i].Amount, BFPContractContractActivity.Amount)
                                    @Html.DisplayFor(m => m.BFPContractContractActivityCollection[i].Amount, MVC.Shared.Views.DisplayTemplates.DecimalWithSpan)
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="table-wrapper">
    @Html.DisplayFor(m => m.BFPContractContractActivityCollection, MVC.Shared.Views.DisplayTemplates.BFPContractContractActivitiesDiagram)
</div>
