            @Html.DisplayFor(m => m.TotalAmount, MVC.Shared.Views.DisplayTemplates.DecimalWithSpan)
        </div>
        @*<div class="form-group col-md-4">
            @Html.LabelFor(m => m.FinanceReportAmountWithoutIncome, PaymentRequestBasicData.FinanceReportAmountWithoutIncome)
            @Html.DisplayFor(m => m.FinanceReportAmountWithoutIncome, MVC.Shared.Views.DisplayTemplates.DecimalWithSpan)
        </div>*@
