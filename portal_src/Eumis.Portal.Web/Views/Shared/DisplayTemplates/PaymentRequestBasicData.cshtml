    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.BeneficiaryRegistrationVAT, PaymentRequestBasicData.BeneficiaryRegistrationVAT)
        @Html.DisplayFor(m => m.BeneficiaryRegistrationVAT)
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.BankAccount, PaymentRequestBasicData.BankAccount)
        @Html.DisplayFor(m => m.BankAccount)
