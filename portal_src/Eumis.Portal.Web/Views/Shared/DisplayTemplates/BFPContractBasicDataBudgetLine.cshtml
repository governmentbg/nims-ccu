@model R_10031.BFPContractBasicData

@if (Model != null)
{
    @Html.Partial("DisplayTemplates/" + MVC.Shared.Views.DisplayTemplates.BFPContractBasicDataReadonlyPart, Model)

    <div class="form-group col-md-9">
        @Html.LabelFor(m => m.Name, BFPContractBasicData.NameBudetLine)
        @Html.DisplayFor(m => m.Name, MVC.Shared.Views.DisplayTemplates.TextAreaPre)
    </div>
    <div class="form-group col-md-3">
        @Html.LabelFor(m => m.Duration, Model.MaxDuration == 0 ? BFPContractBasicData.Duration : string.Format("{0} (1-{1})", BFPContractBasicData.Duration, Model.MaxDuration))
        @Html.DisplayFor(m => m.Duration)
    </div>

    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.NameEN, BFPContractBasicData.NameENBudetLine)
        @Html.DisplayFor(m => m.NameEN, MVC.Shared.Views.DisplayTemplates.TextAreaPre)
    </div>

    <div class="form-group col-md-3">
        <label>@BFPContractBasicData.StartDate</label>
        @Html.DisplayFor(m => m.StartDate)
    </div>

    <div class="clearfix"></div>

    <div class="form-group col-md-3">
        <label>@BFPContractBasicData.RegistrationNumber</label>
        @Html.DisplayFor(m => m.RegistrationNumber)
    </div>

    <div class="form-group col-md-3">
        <label>@BFPContractBasicData.Version</label>
        @Html.DisplayFor(m => m.Version)
    </div>

    <div class="form-group col-md-3">
        <label>@BFPContractBasicData.SubVersion</label>
        @Html.DisplayFor(m => m.SubVersion)
    </div>

    <div class="form-group col-md-3">
        <label>@BFPContractBasicData.ContractDate</label>
        @Html.DisplayFor(m => m.ContractDate)
    </div>

    <div class="clearfix"></div>

    @Html.DisplayFor(m => m.NutsAddress)
}
