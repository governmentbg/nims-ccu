@model R_10031.BFPContractBasicData

@if (Model != null)
{
    @Html.Partial("DisplayTemplates/" + MVC.Shared.Views.DisplayTemplates.BFPContractBasicDataReadonlyPart, Model)

    <div class="form-group col-md-9">
        @Html.LabelFor(m => m.Name, BFPContractBasicData.Name)
