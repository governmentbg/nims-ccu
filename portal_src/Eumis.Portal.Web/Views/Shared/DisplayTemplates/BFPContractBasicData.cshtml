        @Html.DisplayFor(m => m.DescriptionEN, MVC.Shared.Views.DisplayTemplates.TextAreaPre)
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(m => m.Purpose, BFPContractBasicData.Purpose)
