@model R_10040.BFPContractProjectSpecFields

@if (Model != null && Model.ProjectSpecFieldCollection != null && Model.ProjectSpecFieldCollection.Count > 0)
{
    for (int i = 0; i < Model.ProjectSpecFieldCollection.Count; i++)
    {
        <div class="form-group col-md-12 @(Model.ProjectSpecFieldCollection[i].IsDeactivated ? "deactivated" : "")">
            <label>
                @Model.ProjectSpecFieldCollection[i].Title 
                @if (Model.ProjectSpecFieldCollection[i].IsDeactivated)
                {
                    <img class="info-icon" src="@Url.Content(Links.Content.img.icons.info_white_png)" data-placement="right" data-toggle="popover" data-content="@Global.Deactivated" data-trigger="hover" alt="" data-original-title="" title="">
                }
                <br />
                <span style="font-style: italic;">(@Model.ProjectSpecFieldCollection[i].Description)</span>
            </label>
            @Html.DisplayFor(m => m.ProjectSpecFieldCollection[i].Value, MVC.Shared.Views.DisplayTemplates.TextAreaPre)
        </div>
    }
}
