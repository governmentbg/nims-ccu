                                            @Texts.Admin_OPStatistics_MonitoredContractsCount
                                        </div>
                                        <div class="@secondDivClass" style="font-weight:bold;">
                                            @Html.DisplayFor(m => m.SearchResult.MonitoredContractsCount)
                                        </div>
                                    </div>
                                </div>
                                <div class="list-item">
                                    <div class="row">
                                        <div class="@firstDivClass">
                                            @Texts.Admin_OPStatistics_CanceledContractsCount
                                        </div>
                                        <div class="@secondDivClass" style="font-weight:bold;">
                                            @Html.DisplayFor(m => m.SearchResult.CanceledContractsCount)
                                        </div>
                                    </div>
                                </div>
