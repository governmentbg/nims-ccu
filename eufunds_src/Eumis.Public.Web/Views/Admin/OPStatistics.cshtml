                                        </div>
                                    </div>
                                </div>
                                
                                <div class="list-item">
                                    <div class="row">
                                        <div class="@firstDivClass">
                                            @Texts.Admin_OPStatistics_ActiveContractsCount
                                        </div>
                                        <div class="@secondDivClass" style="font-weight:bold;">
                                            @Html.DisplayFor(m => m.SearchResult.ActiveContractsCount)
                                        </div>
                                    </div>
                                </div>
                                <div class="list-item">
                                    <div class="row">
                                        <div class="@firstDivClass">
                                            @Texts.Admin_OPStatistics_PausedContractsCount
                                        </div>
                                        <div class="@secondDivClass" style="font-weight:bold;">
                                            @Html.DisplayFor(m => m.SearchResult.PausedContractsCount)
                                        </div>
                                    </div>
                                </div>
                                <div class="list-item">
                                    <div class="row">
