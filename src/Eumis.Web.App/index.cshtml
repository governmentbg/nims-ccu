@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Eumis.Web.Host.Nancy.Models.HomeModel>
@using Eumis.Web.Host.Nancy

<!DOCTYPE html>
<html lang="en">
<head>
    <!--[if lt IE 9]>
      <script type="text/javascript">
        window.location.replace("/browserNotSupported");
      </script>
    <![endif]-->

    <title>@RazorViewTexts.Index_UmisTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="version" content="@Model.ProductVersion">

    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,700,500&subset=latin,cyrillic' rel='stylesheet' type='text/css'>

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', '@Model.GoogleTrackingId', 'auto');
        ga('set', 'dimension1', '@Model.ProductVersion');
        ga('send', 'pageview');

    </script>
</head>
<body>
    <noscript>
        <h2 style="text-align: center;">@RazorViewTexts.Index_WarningIfJavaScriptIsDisabled</h2>
    </noscript>


    <div id="ng-app" ng-app="<%= htmlWebpackPlugin.options.env.appModule %>">
        <script type="text/javascript">
          window.eumisConfiguration = {
            blobServerLocation: "@Model.BlobServerLocation",
            maxBlobSize: "@Model.MaxBlobSize",
            portalEvalTableViewUrl: "@Model.PortalProcedureEvalTableViewUrl",
            portalEvalTableEditUrl: "@Model.PortalProcedureEvalTableEditUrl",
            portalApplicationViewUrl: "@Model.PortalApplicationViewUrl",
            portalEvalSessionSheetViewUrl: "@Model.PortalEvalSessionSheetViewUrl",
            portalEvalSessionSheetEditUrl: "@Model.PortalEvalSessionSheetEditUrl",
            portalEvalSessionStandpointViewUrl: "@Model.PortalEvalSessionStandpointViewUrl",
            portalEvalSessionStandpointEditUrl: "@Model.PortalEvalSessionStandpointEditUrl",
            portalProjectViewUrl: "@Model.PortalProjectViewUrl",
            portalProjectEditUrl: "@Model.PortalProjectEditUrl",
            portalProjectCommunicationViewUrl: "@Model.PortalProjectCommunicationViewUrl",
            portalProjectCommunicationAnswerViewUrl: "@Model.PortalProjectCommunicationAnswerViewUrl",
            portalProjectCommunicationEditUrl: "@Model.PortalProjectCommunicationEditUrl",
            portalProjectManagingAuthorityCommunicationViewUrl: "@Model.PortalProjectManagingAuthorityCommunicationViewUrl",
            portalProjectManagingAuthorityCommunicationEditUrl: "@Model.PortalProjectManagingAuthorityCommunicationEditUrl",
            portalProjectManagingAuthorityCommunicationAnswerViewUrl: "@Model.PortalProjectManagingAuthorityCommunicationAnswerViewUrl",
            portalProjectManagingAuthorityCommunicationAnswerEditUrl: "@Model.PortalProjectManagingAuthorityCommunicationAnswerEditUrl",
            portalContractViewUrl: "@Model.PortalContractViewUrl",
            portalContractEditUrl: "@Model.PortalContractEditUrl",
            portalContractEditPartialUrl: "@Model.PortalContractEditPartialUrl",
            portalContractOfferViewUrl: "@Model.PortalContractOfferViewUrl",
            portalContractProcurementViewUrl: "@Model.PortalContractProcurementViewUrl",
            portalContractProcurementEditUrl: "@Model.PortalContractProcurementEditUrl",
            portalContractCommunicationViewUrl: "@Model.PortalContractCommunicationViewUrl",
            portalContractCommunicationEditUrl: "@Model.PortalContractCommunicationEditUrl",
            portalContractSpendingPlanViewUrl: "@Model.PortalContractSpendingPlanViewUrl",
            portalContractSpendingPlanEditUrl: "@Model.PortalContractSpendingPlanEditUrl",
            portalContractReportTechnicalViewUrl: "@Model.PortalContractReportTechnicalViewUrl",
            portalContractReportTechnicalEditUrl: "@Model.PortalContractReportTechnicalEditUrl",
            portalContractReportFinancialViewUrl: "@Model.PortalContractReportFinancialViewUrl",
            portalContractReportFinancialEditUrl: "@Model.PortalContractReportFinancialEditUrl",
            portalContractReportPaymentViewUrl: "@Model.PortalContractReportPaymentViewUrl",
            portalContractReportPaymentEditUrl: "@Model.PortalContractReportPaymentEditUrl",
            portalContractReportMicroType1ViewUrl: "@Model.PortalContractReportMicroType1ViewUrl",
            portalContractReportMicroType2ViewUrl: "@Model.PortalContractReportMicroType2ViewUrl",
            portalContractReportMicroType3ViewUrl: "@Model.PortalContractReportMicroType3ViewUrl",
            portalContractReportMicroType4ViewUrl: "@Model.PortalContractReportMicroType4ViewUrl",

            passwordRegex: "@Model.PasswordRegex",
            passwordInvalidFormatMessage: "@Model.PasswordInvalidFormatMessage"
        };
        </script>

      <div id="root" ui-view>
        <div class="container">
          <div class="content-wrapper txt-align-center">
            <h2 style="text-align: center;">@RazorViewTexts.Index_PleaseWait</h2>
            <img src="img/loader-circles.gif" alt="" />
          </div>
        </div>
      </div>
    </div>

    <div class="eu-funds">
        @if (Model.ShowLanguageSwitcher)
        {
            <form method="post" action='@(Model.IsBgVersion ? "/en-GB/" : "/bg-BG/")'>
                <button type="submit" style="background: none; border: 0px; padding: 0px;">
                    <span class="fa fa-globe"></span>
                    @(Model.IsBgVersion ? "english version" : "българскa версия")
                </button>
            </form>
        }

        @if (Model.IsBgVersion)
        {
            <img src="img/logo_good_governance_bg.png" alt="" />
        }
        else
        {
            <img src="img/logo_good_governance_en.png" alt="" />
        }
        <span>@RazorViewTexts.Layout_EuFundsFooter</span>
        <a href="http://www.eufunds.bg">www.eufunds.bg</a>
    </div>
</body>
</html>
